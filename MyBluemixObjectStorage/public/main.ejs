<!DOCTYPE html>
<html>
  <head>
    <title>IBM Bluemix Object Storage Application</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- <meta http-equiv="refresh" content="30"> Refreshes the page every 30 seconds -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  </head>
  <body>
  <div class="upload_panel" style="position: fixed; top:0; left:0; width: 100%; height: 105px">
  	<div style="width: 100%; padding-top: 10px;">
  	<% include ./fileinput.ejs %>
	</div>
	<h1 class="title" style="margin-top: 15px; margin-bottom: 5px;"><span style="padding-left: 2px">Files currently in My Bluemix Object Store</span></h1>
  </div>
  <% if(containerFiles.length > 0) { %>
  <div class="files_panel" style="position: fixed; bottom:0; left:0; width: 100%; top: 0; margin-top: 105px; overflow: scroll">
  <div style="width: 100%;">
    <table class="table table-striped table-hover" style="padding-top: 0px; margin-left: 5px;">
    	<tr>
    		<th style="text-align:center">#</th>
    		<th style="text-align:center"></th>
			<th style="text-align:left">File Name</th>
			<th style="text-align:right">Size</th>
			<th style="text-align:left">Uploaded On</th>
			<th style="text-align:right"></th>
		</tr>
      <% for (var i = 0; i < containerFiles.length; i++) { %>
        <tr>
        	<td style="text-align:center; vertical-align:middle" style="color: red;"><%= i+1 %></td>
            <td style="text-align:left; vertical-align:middle" style="color: blue;"><a href="/download/<%= containerFiles[i].name %>"><img src="./images/cloud-download32.png" title="Download File"></a></td>
            <td style="text-align:left; vertical-align:middle" style="color: blue;"><%= containerFiles[i].name %></td>
            <td style="text-align:right; vertical-align:middle" style="color: black;"><%= containerFiles[i].size %></td>
            <td style="text-align:left; vertical-align:middle" style="color: black;"><%= containerFiles[i].lastModified %></td>
            <td style="text-align:right; vertical-align:middle"><a href="/delete/<%= containerFiles[i].name %>"><img src="./images/delete32.png" title="Delete File"></a></td>
        </tr>
      <% } %>
    </table>
  </div>
  </div>
  <% } %>
</body>
</html>
